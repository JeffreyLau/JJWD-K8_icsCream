
config SND_SOC_TCC
	tristate "SoC Audio for the Telechips TCC chip"
	depends on (ARCH_TCC92XX || ARCH_TCC93XX || ARCH_TCC88XX || ARCH_TCC892X) && SND_SOC
	help
	  Say Y or M if you want to add support for codecs attached to
	  the TCC I2S interface. You will also need
	  to select the audio interfaces to support below.
	  
config SND_SOC_TCC_BOARD_WM8731
	bool "WM8731"
	select SND_SOC_TCC_I2S
	select SND_SOC_WM8731
	depends on SND_SOC_TCC && (MACH_TCC9300 || MACH_TCC9300CM || MACH_TCC8800 || MACH_TCC8900 || MACH_TCC9201 || MACH_TCC8920) 
	help
	  Say Y if you want to add support for SoC audio on Telechips
	  TCC (WM8731).

config SND_SOC_TCC_BOARD_WM8750
	bool "WM8750"
	select SND_SOC_TCC_I2S
	select SND_SOC_WM8750
	depends on SND_SOC_TCC && MACH_TCC9200S
	help
	  Say Y if you want to add support for SoC audio on Telechips
	  TCC (WM8750).	  

config SND_SOC_TCC_BOARD_WM8524
        bool "WM8524"
        select SND_SOC_TCC_I2S
        select SND_SOC_WM8524
        depends on SND_SOC_TCC && (MACH_TCC9300ST || MACH_TCC8800ST || MACH_TCC8920ST)
        help
          Say Y if you want to add support for SoC audio on Telechips
          TCC (WM8524).

