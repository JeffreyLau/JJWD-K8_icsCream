config SND_SOC_TCC_MULTICHANNEL
	bool "TCC MultiChannel"
	select SND_SOC_TCC_I2S
	depends on SND_SOC_TCC && (MACH_TCC8800 || MACH_TCC8800ST || MACH_TCC9300ST || MACH_TCC8920 || MACH_TCC8920ST)
